{
  "compilerOptions": {
    "outDir": "js",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017.object"
    ],
    "declaration": true,
    "declarationDir": "./js/typings",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "azure-maps-control-scalebar": [
        "types/ScalebarControl"
      ],
      "azure-maps-control-overviewmap": [
        "types/OverviewMap"
      ],
      "azure-maps-control-animations": [
        "types/Animations"
      ]
    }
  },
  "include": [
    "azureMapsControl/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "types"
  ]
}